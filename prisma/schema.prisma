generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Seller {
  id         String    @id @default(uuid())
  name       String
  email      String
  phone      String?
  calendarId String    // ID do Google Calendar do vendedor
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  meetings   Meeting[]
}

model Meeting {
  id          String   @id @default(uuid())
  sellerId    String
  seller      Seller   @relation(fields: [sellerId], references: [id])
  clientPhone String
  clientName  String?
  clientEmail String?
  subject     String?
  startTime   DateTime
  endTime     DateTime
  eventId     String   // ID do evento no Google Calendar
  meetLink    String?
  reminderAt  DateTime?
  status      MeetingStatus @default(SCHEDULED)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([sellerId])
  @@index([clientPhone])
  @@index([clientEmail])
  @@index([startTime])
}

model ConversationLog {
  id        String   @id @default(uuid())
  phone     String   @unique
  messages  Json     // Historico da conversa para contexto
  disabled  Boolean  @default(false) // Se true, bot não responde esta conversa
  lastContactAt DateTime @default(now()) // Ultimo contato (atualizado pelo app)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Campos para identificar origem do contato
  firstContactInstance String?  // Instância/número que fez o primeiro contato
  lastContactInstance  String?  // Instância/número que fez o último contato

  // Campos para controle de reativação
  conversationStatus ConversationStatus @default(ACTIVE)
  stage              String?            // Estágio da conversa identificado pela IA
  reactivationAttempts Int @default(0)  // Quantas vezes tentamos reativar
  lastReactivationAt DateTime?          // Última tentativa de reativação
  discardReason      String?            // Motivo do descarte (se aplicável)

  reactivationQueue ReactivationQueue[]

  @@index([phone])
  @@index([lastContactAt])
  @@index([conversationStatus])
}

enum ConversationStatus {
  ACTIVE       // Conversa ativa, cliente respondendo
  INACTIVE     // Cliente parou de responder
  REACTIVATING // Em processo de reativação
  CONVERTED    // Cliente agendou reunião
  DISCARDED    // Descartado (sem interesse, muitas tentativas, etc)
}

enum ReactivationStatus {
  PENDING   // Aguardando envio
  SENT      // Enviada com sucesso
  FAILED    // Falhou ao enviar
  CANCELLED // Cancelada (ex: cliente respondeu antes do envio)
}

// Fila de mensagens de reativação para envio parcelado
model ReactivationQueue {
  id          String   @id @default(uuid())
  phone       String
  message     String   @db.Text // Mensagem a ser enviada
  instance    String   // Instância do Evolution API
  priority    Int      @default(0) // Prioridade (maior = mais urgente)
  scheduledAt DateTime // Quando deve ser enviada
  sentAt      DateTime? // Quando foi enviada (null = pendente)
  status      ReactivationStatus @default(PENDING)
  errorMessage String? // Mensagem de erro se falhou
  attempt     Int      @default(1) // Qual tentativa de reativação é esta
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  conversationLog   ConversationLog @relation(fields: [conversationLogId], references: [id])
  conversationLogId String

  @@index([status, scheduledAt])
  @@index([phone])
}

enum MeetingStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  NO_SHOW
}
